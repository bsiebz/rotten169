-#  This file is app/views/movies/similar.html.haml
%h1 Similar Movies page for "#{@movie.title}"

%table#movies
  %thead
    %tr
      %th{:class => @hilite_title}= link_to "Movie Title", movies_path(:sort_by=>'title'), id: "title_header"
      %th Director
      %th Rating
      %th{:class => @hilite_date}= link_to  "Release Date", movies_path(:sort_by=>'release_date'), id: "release_date_header"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.director
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Back to movie list', movies_path